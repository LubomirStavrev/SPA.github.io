 {{> header }}
 <h1>Create New Offer</h1>
        <p class="message"></p>
        <form onsubmit="createOfferForm(event)">
            <div>
                <input type="text" id="createOffer-Name" placeholder="Name...">
            </div>
            <div>
                <input type="text" id="createOffer-Price" placeholder="Price...">
            </div>
            <div>
                <input type="text" id="createOffer-ImageUrl" placeholder="Image url...">
            </div>
            <div>
                <textarea id="createOffer-Description" placeholder="Give us some description about this offer..."></textarea>
            </div>
            <div>
                <input id="createOffer-Brand" type="text" placeholder="Brand...">
            </div>
            <div>
                <button>Create</button>
            </div>
        </form>
        {{> footer }}