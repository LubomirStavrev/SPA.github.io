{{> header }}
<h1>Register</h1>
        <p class="form-info">Already registered?
            <a href="/login" onclick="navigateHandler(event)">Login now</a> and have some fun!
        </p>

        <form onsubmit="registerForm(event)">
            <div>
                <input type="email" id="register-Email" placeholder="Email...">
            </div>
            <div>
                <input type="password" id="register-Password" placeholder="Password">
            </div>
            <div>
                <input type="password" id="register-Re-Password" placeholder="Re-password">
            </div>
            <div>
                <p class="message"></p>
                <button>Register</button>
            </div>
        </form>
{{> footer }}